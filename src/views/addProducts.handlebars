<h1 class="text-body-secondary d-flex m-4">Add a New Product !</h1>
{{message}}
<div class="col-12 d-flex m-4">
  <form method="post" action="/api/products/" enctype="multipart/form-data">
    <!-- title input -->
    <div class="form-outline mb-4">
        <input type="text" placeholder="title" name="title" class="form-control" value="Producto Nuevo Agregado"/>
    </div>

    <!-- description input -->
    <div class="form-outline mb-4">
        <input type="text" placeholder="description" name="description" class="form-control" value="Esto es un Producto nuevo agregado"/>
    </div>

    <!-- code input -->
    <div class="form-outline mb-4">
        <input type="text" placeholder="code" name="code" class="form-control" value="COD1203"/>
    </div>
    <!-- price input -->
    <div class="form-outline mb-4">
        <input type="number" placeholder="price" name="price" class="form-control" value="100"/>
    </div>

    <!-- status input -->
    <div class="form-outline mb-4">
        <input type="text" placeholder="status" name="status" class="form-control" value="true"/>
    </div>

    <!-- stock input -->
    <div class="form-outline mb-4">
        <input type="number" placeholder="stock" name="stock" class="form-control" value="50"/>
    </div>

    <!-- category input -->
    <div class="form-outline mb-4">
        <input type="text" placeholder="category" name="category" class="form-control" value="Productos Nuevos"/>
    </div>

    <!-- thumbnail input -->
    <div class="form-outline mb-4">
        <input type="file" name="productImage"/>
    </div>
    <div class="text-center d-flex">
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block me-3">Add Product!</button>
    </div>

  </form>
</div>



  <!-- Modal Edit-->
  <div class="modal fade" id="editModal{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Product code {{this.code}}</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Please complete all fields. None should be left blank.
        </div>
        <div class="modal-footer">
          <form id="dataToUpdate" method="POST" action="/api/products/edit/{{this._id}}">
            <div>
              <label for="title">Title: </label>
              <input type="text" name="title" value={{this.title}}>
            </div>
            <div>
              <label for="description">Description: </label>
              <input type="text" name="description" value={{this.description}}>
            </div>
            <div>
              <label for="code">Code: </label>
              <input type="text" name="code" value={{this.code}}>
            </div>
            <div>
              <label for="price">Price: </label>
              <input type="number" name="price" value={{this.price}}>
            </div>
            <div>
              <label for="status">Status: </label>
              <input type="text" name="status" value={{this.status}}>
            </div>
            <div>
              <label for="stock">Stock: </label>
              <input type="number" name="stock" value={{this.stock}}>
            </div>
            <div>
              <label for="category">Category: </label>
              <input type="text" name="category" value={{this.category}}>
            </div>
            <div>
              <label for="owner">Owner: </label>
              <input type="text" name="owner" value={{this.owner}}>
            </div>
            <div>
              <label for="thumbnail">Thumbnail: </label>
              <input type="text" name="thumbnail" value={{this.thumbnail}}>
            </div>
            <div>
              <br>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Cierro Modal Edit-->

</div>
